<?xml version="1.0"?>
<config>
	<modules>
		<Paymentsense_Pay>
			<version>0.1.0</version>
		</Paymentsense_Pay>
	</modules>
	<frontend>
		<routers>
			<pay>
				<use>standard</use>
				<args>
					<module>Paymentsense_Pay</module>
					<frontName>pay</frontName>
				</args>
			</pay>
		</routers>
		<layout>
			<updates>
				<pay>
					<file>pay.xml</file>
				</pay>
			</updates>
		</layout>
	</frontend>
	<global>
		<fieldsets>
			<sales_convert_quote_payment>
				<check_no>
					<to_order_payment>*</to_order_payment>
				</check_no>
				<check_date>
					<to_order_payment>*</to_order_payment>
				</check_date>
			</sales_convert_quote_payment>
		</fieldsets>
		<models>
			<pay>
				<class>Paymentsense_Pay_Model</class>
				<resourceModel>pay_mysql4</resourceModel>
			</pay>
			<pay_mysql4>
				<class>Paymentsense_Pay_Model_Mysql4</class>
				<entities>
					<pay>
						<table>pay</table>
					</pay>
				</entities>
			</pay_mysql4>
		</models>
		<resources>
			<pay_setup>
				<setup>
					<module>Paymentsense_Pay</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</pay_setup>
			<pay_write>
				<connection>
					<use>core_write</use>
				</connection>
			</pay_write>
			<pay_read>
				<connection>
					<use>core_read</use>
				</connection>
			</pay_read>
		</resources>
		<blocks>
			<pay>
				<class>Paymentsense_Pay_Block</class>
			</pay>
			<adminhtml>
				<rewrite>
					<sales_order_payment>Paymentsense_Paymoto_Block_Adminhtml_Sales_Order_Payment</sales_order_payment>
				</rewrite>
			</adminhtml>
		</blocks>
		<helpers>
			<pay>
				<class>Paymentsense_Pay_Helper</class>
			</pay>
		</helpers>
		<rewrite>
			<paymentsense_pay>
				<from><![CDATA[#^/admin/sales_order/voidPayment#]]></from>
				<to>paymentsense_pay/adminhtml_sales_order/voidPayment</to>
			</paymentsense_pay>
		</rewrite>



	</global>

	<admin>      
		<routers>
			<!-- Create admin controller -->		    
			<adminhtml>
				<args>
					<modules>
						<paymentsense_pay after="Mage_Adminhtml">PaymentsensePay_Adminhtml</paymentsense_pay>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>

	<default>
		<payment>
			<pay>
				<active>1</active>
				<model>pay/pay</model>
				<order_status>processing</order_status>
				<title>Paymentsense Payment Method</title>
				<message>Please enter your credit card information</message>
			</pay>
		</payment>
	</default>
	<adminhtml>
		<layout>
			<updates>
				<tpg>
					<file>pay.xml</file>
				</tpg>
			</updates>
		</layout>
	</adminhtml>
</config>
