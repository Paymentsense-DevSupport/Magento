<?xml version="1.0"?>
<config>
    <modules>
        <Paymentsense_Payhosted>
            <version>0.1.0</version>
        </Paymentsense_Payhosted>
    </modules>
    <frontend>
        <routers>
            <payhosted>
                <use>standard</use>
                <args>
                    <module>Paymentsense_Payhosted</module>
                    <frontName>payhosted</frontName>
                </args>
            </payhosted>
        </routers>
        <layout>
            <updates>
                <payhosted>
                    <file>payhosted.xml</file>
                </payhosted>
            </updates>
        </layout>
    </frontend>
    <global>
    	<fieldsets>
    		 <sales_convert_quote_payment>
    		 	<check_no>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_no>
    		 	<check_date>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_date>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <payhosted>
                <class>Paymentsense_Payhosted_Model</class>
                <resourceModel>Payhosted_mysql4</resourceModel>
            </payhosted>
            <!--<payhosted_mysql4>
                <class>Paymentsense_Payhosted_Model_Mysql4</class>
                <entities>
                    <pay>
                        <table>Payhosted</table>
                    </pay>
                </entities>
            </payhosted_mysql4>-->
        </models>
	<events>
           <!-- <sales_order_place_after>
                <observers>
                    <auto_invoice_order>
                        <type>singleton</type>
                        <class>orderhook/observer</class>
                        <method>implementOrderStatus</method>
                    </auto_invoice_order>
                </observers>
            </sales_order_place_after>-->
        </events>
        <resources>
            <payhosted_setup>
                <setup>
                    <module>Paymentsense_Payhosted</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </payhosted_setup>
            <payhosted_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </payhosted_write>
            <payhosted_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </payhosted_read>
        </resources>
        <blocks>
            <payhosted>
                <class>Paymentsense_Payhosted_Block</class>
            </payhosted>
	    <adminhtml>
		<rewrite>
		   <sales_order_payment>Paymentsense_Paymoto_Block_Adminhtml_Sales_Order_Payment</sales_order_payment>
		</rewrite>
             </adminhtml>
        </blocks>
        <helpers>
            <payhosted>
                <class>Paymentsense_Payhosted_Helper</class>
            </payhosted>
        </helpers>
    </global>
    <default>
        <payment>
            <payhosted>
                <active>1</active>
                <model>payhosted/payhosted</model>
                <order_status>processing</order_status>
                <title>Paymentsense Hosted</title>
                <message>Please enter your credit card information</message>
            </payhosted>
         </payment>
    </default>
</config>